Options -Indexes
DirectoryIndex index.php dashboard.php pacientes.php

# Custom error pages
ErrorDocument 404 /ClinicaBienestar/admin/administrador/errors/404.php
ErrorDocument 403 /ClinicaBienestar/admin/administrador/errors/403.php
ErrorDocument 500 /ClinicaBienestar/admin/administrador/errors/500.php

# Protect sensitive directories
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect config files
<FilesMatch "\.(ini|log|config.php|env)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect the PHP files in specific directories
<FilesMatch "^(config|includes)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Allow only specific file types
<FilesMatch "\.(php|js|css|png|jpg|jpeg|gif|pdf)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Force HTTPS (uncomment if using SSL)
# RewriteEngine On
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Prevent directory listing
Options -MultiViews

# Protect against XSS, clickjacking and other vulnerabilities
Header set X-XSS-Protection "1; mode=block"
Header set X-Frame-Options "SAMEORIGIN"
Header set X-Content-Type-Options "nosniff"